<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.neo.group5_gps.InscriptionActivity"
    android:id="@+id/Page_d_Inscription"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1">

    <ImageView
        android:layout_width="475dp"
        android:layout_height="wrap_content"
        android:id="@+id/logoMain"
        android:src="@mipmap/logo"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.64" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:ems="10"
        android:id="@+id/pseudo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/mdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Confirme password"
        android:ems="10"
        android:id="@+id/reconfirmation"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="INSCRIRE"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/submit_bt_inscrire"
        android:onClick="userRegister"
        />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="retour"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/button"
        android:onClick="goBack"
        />

</LinearLayout>